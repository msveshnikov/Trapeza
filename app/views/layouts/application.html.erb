</head>
<body>

<%= link_to image_tag("top.jpg"), root_path %>

<ol class="breadcrumb">
  <%= render_breadcrumbs :tag => :li, :separator => " · " %>
</ol>

<br><br>
<aside class="span7">
  <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>
  <%= yield %>
  <br><br>

</aside>
<aside class="span3">

  <br>
  <%= link_to "Форум", "http://extender.tk", target: "_blank" %>
  <br>
  <%= link_to "Мобильная версия", mobile: 1 %>
  <br><br>

  <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
