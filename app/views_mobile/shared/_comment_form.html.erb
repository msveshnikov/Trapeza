<%= form_for(@comment) do |f| %>
    <%= f.text_field :content, placeholder: "Мое мнение", id: "comment" %>
    <br>
    <%= f.hidden_field :recipe_id %>
    <%= f.hidden_field(:picture_cache) %>
    <%= f.file_field(:picture, id: "file") unless android_device? %>
    <br>
    <%= f.submit "Отправить" %>
<% end %>